{
  "name": "music_player",
  "productName": "music player",
  "version": "1.0.0",
  "description": "a simple music player!",
  "main": "./src/app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "pack": "electron-builder --win --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "productName": "music player",
    "appId": "com.z.mp",
    "copyright": "@author z",
    "files": [
      "./src/**/*",
      "./package.json",
      "./package-lock.json",
      "!./build/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "",
      "uninstallerIcon": "",
      "installerHeaderIcon": "",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "music player",
      "include": ""
    },
    "publish": [
      {
        "provider": "github",
        "url": ""
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": ""
    },
    "win": {
      "icon": "",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": ""
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zkh110119/music_player.git"
  },
  "author": "Z",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zkh110119/music_player/issues"
  },
  "homepage": "https://github.com/zkh110119/music_player#readme",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0",
    "electron-devtools-installer": "^3.1.0",
    "node-gyp": "^7.0.0"
  },
  "dependencies": {
    "bootstrap": "^3.4.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1",
    "sqlite3": "^5.0.0",
    "uuid": "^8.2.0"
  }
}
